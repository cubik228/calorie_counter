<%= form_with model: @product do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :calories_count %>
    <%= form.number_field :calories_count %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
