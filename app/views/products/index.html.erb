<h1>Products</h1>

<%= form_tag(products_path, method: :get) do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search by name' %>
  <%= submit_tag 'Search',class:"mb-3" %>
<% end %>



<% @products.each do |product| %>
    <h5>
      <%= product.name %>
      <%= product.calories_count %>
    </h6>
    <td>
      <div>
        <%= link_to 'Edit', edit_product_path(product),class:'btn btn-outline-secondary ' %>
      </div>
      <div class="mb-3">
        <%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-outline-danger ' %>
      </div>
    </td>
<% end %>