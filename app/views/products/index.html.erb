<h1>Products</h1>

<% @products.each do |product| %>
    <h2>
      <%= product.name %>
      <%= product.calories_count %>
    </h2>
    <td>
      <div>
        <%= link_to 'Edit', edit_product_path(product),class:'btn btn-outline-secondary btn-lg' %>
      </div>
      <div class="mb-3">
        <%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-outline-danger btn-lg' %>
      </div>
    </td>
<% end %>